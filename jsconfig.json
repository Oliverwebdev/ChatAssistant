{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false
  },

  "include": [
    "*.js",
    "**/*.js"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "build",
    "*.config.js",
    "eslint.config.js"
  ]
}